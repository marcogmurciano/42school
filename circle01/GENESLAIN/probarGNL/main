#include <stdio.h>
int main(int argc, char **argv)
{
    int   fd;
    char *line;
    int   line_num = 1;

    if (argc != 2)
    {
        printf("Uso: %s <archivo_a_leer>\n", argv[0]);
        return (1);
    }
    fd = open(argv[1], O_RDONLY);
    if (fd < 0)
    {
        perror("Error al abrir el archivo");
        return (1);
    }
    while ((line = get_next_line(fd)) != NULL)
    {
        printf("LÃ­nea %d: %s", line_num, line);
        free(line);
        line_num++;
    }
    close(fd);
    return (0);
}

